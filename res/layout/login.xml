<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >android:background="@drawable/tuu" 
<LinearLayout 
      
      android:layout_width="match_parent"
    android:layout_height="match_parent"
       android:orientation="vertical" 
    > 

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
       
        android:text="用户名：" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:ems="10" >

        <requestFocus android:layout_width="match_parent" />

    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
       
        android:text="密码：" />

    <EditText
        android:id="@+id/userpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
       
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
      
        android:text="确认密码：" />

    <EditText
        android:id="@+id/userpassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
       
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
     
        android:text="性别：" />

<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
	
    <RadioButton
        android:id="@+id/maleradio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textSize="20dp"
         
        android:text="男" />

    <RadioButton
        android:id="@+id/womenradio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textSize="20dp"
        
        android:text="女" />
</RadioGroup>

<TextView
    android:id="@+id/textView5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="22dp"

    android:text="生日：" />



<EditText
    android:id="@+id/birthday"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:ems="10"
 
    android:textSize="22dp"
    android:inputType="date" />



<LinearLayout 
        android:layout_width="match_parent"
		android:layout_height="match_parent">
         <TextView
        android:id="@+id/provinceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="籍贯:" />

    	<Spinner
        android:id="@+id/provinceSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:entries="@array/province">
    	</Spinner>

    	<EditText
    	    android:id="@+id/lineEditText"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:text="." />
    	
    	<Spinner
        android:id="@+id/citySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:focusable="false">
        
    	</Spinner>
        
    </LinearLayout>

<TwoLineListItem
    android:id="@+id/twoLineListItem1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<TextView
    android:id="@+id/hobby999"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="22dp"

    android:text="爱好：" />

<EditText
    android:id="@+id/hobby888"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:focusable="false"
    android:inputType="textPersonName" />

<TextView
    android:id="@+id/textView6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="22dp"
  
    android:text="邮箱：" />

<EditText
    android:id="@+id/email"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   
    android:ems="10"
    android:inputType="textEmailAddress" />

<TextView
    android:id="@+id/textView7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:textSize="22dp"
    android:text="手机号：" />

<EditText
    android:id="@+id/phonenumber"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="phone" />

<TextView
    android:id="@+id/textView8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:textSize="22dp"
    android:text="个人简介" />

<EditText
    android:id="@+id/introduce"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:enabled="true"
    android:gravity="top"
    android:ems="10"
    android:minLines="8"
	android:maxLines="5"

   
    android:inputType="textMultiLine" />

<Button
    android:id="@+id/registerbutton999"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   
    android:text="注册"
    android:textSize="22dp"
    android:color="#075391" />

</LinearLayout>
</ScrollView>