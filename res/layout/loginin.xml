<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    
    >android:background="@drawable/qq"

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名："
         android:orientation="horizontal"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/loginusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
         android:orientation="horizontal"
        android:text="密码：" />

    <EditText
        android:id="@+id/loginuserpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />
<LinearLayout 
    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    >
     <CheckBox
        android:id="@+id/remunamecheckBox666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住用户名" />

    <CheckBox
        android:id="@+id/remupasswdcheckBox777"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码" />
    
    </LinearLayout>
   

    <Button
        android:id="@+id/loginbutton777"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录" />

    <Button
        android:id="@+id/forgetbutton999"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="忘记密码" />

    <Button
        android:id="@+id/registerbutton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册新用户" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered By XiaoCai® Company"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>
